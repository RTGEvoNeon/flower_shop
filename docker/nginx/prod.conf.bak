server {
    listen 80;
    server_name mindale.ru www.mindale.ru;

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl http2;
    server_name mindale.ru www.mindale.ru;

    ssl_certificate /etc/letsencrypt/live/mindale.ru/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/mindale.ru/privkey.pem;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-RSA-AES256-GCM-SHA512:ECDHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;

    root /var/www/html/public;
    index index.php index.html;

    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    # Обслуживание изображений продуктов напрямую
    location ~ ^/storage/products/(\d+)/(.+\.(jpg|jpeg|png|gif|webp))$ {
        alias /var/www/html/storage/products/$1/$2;
        expires 1y;
        add_header Cache-Control "public, immutable";
        add_header Vary "Accept-Encoding";
        access_log off;
        
        # Дополнительные заголовки безопасности для изображений
        add_header X-Content-Type-Options "nosniff" always;
        add_header X-Frame-Options "SAMEORIGIN" always;
        
        # Сжатие изображений если поддерживается
        gzip on;
        gzip_vary on;
        gzip_types image/jpeg image/png image/gif image/webp;
        
        # Защита от hotlinking (опционально)
        valid_referers none blocked server_names *.mindale.ru mindale.ru;
        if ($invalid_referer) {
            return 403;
        }
    }

    location ~ \.php$ {
        include fastcgi_params;
        fastcgi_pass app:9000;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_index index.php;
        fastcgi_param HTTPS on;
    }

    location ~ /\.ht {
        deny all;
    }
}

